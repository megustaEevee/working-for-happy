<div class="main">

  <div class="left_bar">
    <h1>精鋭部隊</h1>
    
    <div class="log_in">
      <%= link_to current_user.username, user_path(id: current_user.id), class: "username" %>
    </div>

    <% if current_user == @work.user && @work.wage == nil %>
      <div class="dakoku">
        <%= form_with model: [@work,@wage], local: true do |j| %>
          <%= j.hidden_field :end_time, value: "#{ @end_time }" %>
          <%= j.hidden_field :paying, value: "#{ @paying }" %>
          <%= j.submit "退社する", class: "out" %>
        <% end %>
      </div>
    <% end %>

    <% if @comments == [] && current_user.id == @work.user.id %>
      <div class="comment-box">
        <%= form_with model: [@work,@comment] do |c| %>
          <%= render "errors/error_messages", model: c.object %>
          <%= c.text_area :text, placeholder: "残業理由を入力してください", class: "comment-text", id: "comment_text" %>
          <%= c.submit '残業申請', id: "comment-btn", class: "comment-btn" %>
        <% end %>
      </div>
    <% end %>

    <% if current_user.id == 1 %>
      <div class="comment-box">
        <%= form_with model: [@work,@comment] do |c| %>
          <%= render "errors/error_messages", model: c.object %>
          <%= c.text_area :text, placeholder: "コメントを入力してください", class: "comment-text", id: "comment_text" %>
          <%= c.submit '残業要請', id: "comment-btn", class: "comment-btn" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="right_bar">
    <H2><%="#{@work.user.username}さん、今日も1日がんばりましょう" %></h2>
    <div id="day" class="day">
      <%= "#{@time.year}年#{@time.month}月#{@time.day}日" %>
      <div id="time" class="time">
      </div>
    </div>
    <div id="Message" class="Message">
    </div>

    <% if @comments %>
      <% @comments.each do |c| %>
        <div id='comments' class="comments">
          <p>
            <% if c.user.id == 1 %>
              <%= "#{c.work.user.username}さんへ"%><br>
            <% end %>
            <%= "#{c.user.username}:" %>
              <%= c.text %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>

</div>