<div class="main">

  <div class="left_bar">
    <h2>鬼滅隊</h2>
    
    <div class="log_in">
      <% if user_signed_in? %>
        <%= link_to current_user.username, "#", class: "username" %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "login" %>
        <%= link_to "ログイン", new_user_session_path, class: "sign-up" %>
      <% end %>
    </div>

    <div class="dakoku">
    <%= form_with model: @jikan, local: true do |j| %>
      <%= j.hidden_field :start_time, value: "#{@time.hour}" %>
        <% if user_signed_in? %>
          <%= j.submit "退社する", class: "out" %>
        <% end %>
      <% end %>
    </div>

  </div>

  <div class="right_bar">
  <H2>今日も1日がんばりましょう</h2>

    <div class="time">
      <%= @time %>
    </div>
  </div>

</div>